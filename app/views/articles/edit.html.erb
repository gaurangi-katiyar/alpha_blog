<h1> Edit article</h1>
<% if @articles.errors.any? %>
  <h3>The following errors prevented the article from being saved </h3>
  <ul>
    <% @articles.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @articles, local: true) do |f| %>
  <p> 
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p> 
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
  <p> 
    <%= f.submit%>
    
  </p>
<% end %>